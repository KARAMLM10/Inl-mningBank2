@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="container-fluid p-0" style="height: 100vh; background-image: url('/assets/img/BWBG.jpg'); background-size: cover; background-position: center;">
    <div class="row justify-content-center align-items-center h-100">
        
        <div class="row" style="display: flex; justify-content: center;">
            <div class="col-md-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 style="text-align: center;">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div style="display: flex; align-items: center; justify-content: space-between; background-color: white">
                        <input asp-for="Input.UserRole" type="radio" value="Admin" />
                        <label asp-for="Input.UserRole">Administrator</label>

                        <input asp-for="Input.UserRole" type="radio" value="Cashier" />
                        <label asp-for="Input.UserRole">Cashier</label>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

                </form>
            </div>
        </div>
    </div>
    
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
