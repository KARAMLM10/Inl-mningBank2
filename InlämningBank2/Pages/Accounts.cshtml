@page
@model InlämningBank2.Pages.AccountsModel
@{
    var pagenumber = 0;
}

<div class="card card-bg">
    <div class="card-body">

        <div class="table-responsive">
            <table class="table">
                <h1>All Accounts</h1>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-block" onclick="window.history.back()">Back</button>
                </div>

                <div class="table-wrapper">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    AccountID
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="AccountId" asp-route-sortOrder="asc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-up"></i>
                                    </a>
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="AccountId" asp-route-sortOrder="desc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-down"></i>
                                    </a>
                                </th>
                                <th scope="col">
                                    Frequency
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="Frequency" asp-route-sortOrder="asc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-up"></i>
                                    </a>
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="Frequency" asp-route-sortOrder="desc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-down"></i>
                                    </a>
                                </th>
                                <th scope="col">
                                    Created
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="Created" asp-route-sortOrder="asc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-up"></i>
                                    </a>
                                    <a asp-page="/Accounts" asp-route-sortColumn="Created" asp-route-sortOrder="desc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-down"></i>
                                    </a>
                                </th>
                                <th scope="col">
                                    Balance
                                    <a asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="Balance" asp-route-sortOrder="asc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-up"></i>
                                    </a>
                                    <a asp-page="/Accounts" asp-route-sortColumn="Balance" asp-route-sortOrder="desc" style="text-decoration:none">
                                        <i class="fa-solid fa-angle-down"></i>
                                    </a>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supp in @Model.Accounts)
                            {
                                <tr>
                                    <td>@supp.AccountId</td>
                                    <td>@supp.Frequency</td>
                                    <td>@supp.Created</td>
                                    <td>@supp.Balans</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }

                            <tr>
                                <td colspan="5" class="pagination-wrapper">
                                    @if (Model.CurrentPage != 1)
                                    {
                                        <a class="btn btn-secondary" asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="@Model.SortColumn" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNo="@(Model.CurrentPage - 1)">
                                        Prev
                                        </a>
                                    }

                                    python
                                    Copy code
                                    @if (Model.CurrentPage > 3)
                                    {
                                        pagenumber = 3;
                                    }
                                    @if (Model.CurrentPage == 3)
                                    {
                                        pagenumber = 2;
                                    }
                                    @if (Model.CurrentPage == 2)
                                    {
                                        pagenumber = 1;
                                    }
                                    @if (Model.CurrentPage == 1)
                                    {
                                        pagenumber = 0;
                                    }

                                    @for (int i = Model.CurrentPage - pagenumber; i <= Model.CurrentPage + 3; i++)
                                    {
                                        string activeLink = "btn-secondary";
                                        if (i == Model.CurrentPage)
                                        {
                                            activeLink = "btn-primary";
                                        }

                                        <a class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-secondary")" asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="@Model.SortColumn" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNo="@i">
                                            @i
                                        </a>
                                    }
                                    @if (Model.CurrentPage != Model.PageCount)
                                    {
                                        <a class="btn btn-secondary" asp-page="/Accounts" asp-route-q="@Model.Q" asp-route-sortColumn="@Model.SortColumn" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNo="@(Model.CurrentPage + 1)">
                                            Next
                                        </a>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </table>
        </div>

    </div>
</div>

