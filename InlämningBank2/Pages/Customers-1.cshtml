@page
@model InlämningBank2.Pages.Customers_1Model
@{
    var pagenumber = 0;
}

<div class="card card-bg">
    <div class="card-body">
        @* <h5 class="card-title">Min Tabell</h5>*@
        <div class="table-responsive">
            <table class="table">
                <h1>All Customers</h1>
                @*<div><a class="btn-theme" onclick="window.history.back()"> Back</a></div>*@
                @*Search*@
                @*  <form method="get">
                <input asp-for="@Model.Q" />
                <input type="hidden" asp-for="@Model.Customers" />
                <input type="submit" value="Search" />
                </form>*@
                <form method="get" class="my-form">
                    <div class="form-group">
                        <input asp-for="@Model.Q" class="form-control" />
                    </div>
                    <input type="hidden" asp-for="@Model.Customers" />
                    @*<input type="submit" value="Search" class="btn btn-primary" />*@
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>
                </form>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-block" onclick="window.history.back()">Tillbaka</button>

                </div>

                <table class="table table-hover table-striped">
                    <thead>

                        <tr>
                            <th scope="col">
                                CustomerID
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="CustomerID"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="CustomerID"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                Gender
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Gender"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Gender"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                GivenName
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Givenname"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-sortColumn="Givenname"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                SurName
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Surname"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Surname"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            @*<th scope="col">StreetAddress</th>*@
                            <th scope="col">
                                City
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="City"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="City"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                ZipCode
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Zipcode"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>
                                </a>
                                <a asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Zipcode"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supp in @Model.Customers)
                        {
                            <tr>
                                <td>@supp.CustomerId</td>
                                <td>@supp.Gender</td>
                                <td>@supp.Givenname</td>
                                <td>@supp.Surname</td>
                                <td>@supp.City</td>
                                <td>@supp.Zipcode</td>
                                <td><a asp-page="/CustomerImage" asp-route-customerId="@supp.CustomerId" class="btn btn-primary">View</a></td>
                            </tr>

                        }

                        <tr>
                            <td>
                                @if (Model.CurrentPage != 1)
                                {
                                    <a class="btn btn-secondary"
                                   asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="@Model.SortColumn"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-pageNo="@(Model.CurrentPage - 1)">
                                        Prev
                                    </a>
                                }
                            </td>
                            <td></td>
                            <td></td>
                            <td colspan="2">

                                @if (Model.CurrentPage > 3)
                                {
                                    pagenumber = 3;
                                }
                                @if (Model.CurrentPage == 3)
                                {
                                    pagenumber = 2;
                                }
                                @if (Model.CurrentPage == 2)
                                {
                                    pagenumber = 1;
                                }
                                @if (Model.CurrentPage == 1)
                                {
                                    pagenumber = 0;
                                }
                                @for (int i = Model.CurrentPage - pagenumber; i <= Model.CurrentPage + 3; i++)
                                {

                                    string activeLink = "btn-secondary";
                                    if (i == Model.CurrentPage)
                                    {
                                        activeLink = "btn-primary";
                                    }

                                    <a class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-secondary")"
                                   asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="@Model.SortColumn"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-pageNo="@i">
                                        @i
                                    </a>
                                }
                            <td></td>
                            </td>
                            <td>

                                @if (Model.CurrentPage != Model.PageCount)
                                {
                                    <a class="btn btn-secondary"
                                   asp-page="/Customers-1"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="@Model.SortColumn"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-pageNo="@(Model.CurrentPage + 1)">
                                        Next
                                    </a>
                                }
                            </td>
                        </tr>

                    </tbody>

                </table>


            </table>
        </div>

    </div>
</div>
