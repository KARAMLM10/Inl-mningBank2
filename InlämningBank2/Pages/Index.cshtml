<style>
    .profilecard {
        background-image: url('/assets/img/demo-image-02.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100%;
       
    }

    .transparent-card {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
    }
    .card2 {
        opacity: 4;
        max-width: 300px;
        margin: 0 auto;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.8);
        transition: 0.3s;
        border-radius: 5px;
    }

        .card2:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.8);
        }

        .card2 img {
            width: 100%;
            height: auto;
            border-radius: 5px 5px 0 0;
        }

    .card-body2 {
        padding: 20px;
    }

    .card2-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-text2 {
        font-size: 16px;
        line-height: 1.5;
    }

    .allcards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 20px;
        justify-items: center;
    }
</style>

<style>
